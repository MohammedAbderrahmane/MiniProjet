<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/item_commande_magazin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From ..."
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_commande_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="le : ..."
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_commande_magazin" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_commande_lignes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_commande_time">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/item_commande_prix_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prixTotal :"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_commande_lignes" />

    <TextView
        android:id="@+id/item_commande_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statue of commande :"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_commande_prix_total" />

</androidx.constraintlayout.widget.ConstraintLayout>