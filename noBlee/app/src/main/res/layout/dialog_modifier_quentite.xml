<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/dialog_quentite_seekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:max="10"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialog_quentite_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La quentité selectioné :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_quentite_seekbar" />

    <EditText
        android:id="@+id/dialog_quentite_quentite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/dialog_quentite_textview"
        app:layout_constraintStart_toStartOf="@+id/dialog_quentite_textview"
        app:layout_constraintTop_toBottomOf="@+id/dialog_quentite_textview" />

    <TextView
        android:id="@+id/dialog_quentite_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/dialog_quentite_quentite"
        app:layout_constraintStart_toStartOf="@+id/dialog_quentite_quentite"
        app:layout_constraintTop_toBottomOf="@+id/dialog_quentite_quentite" />

</androidx.constraintlayout.widget.ConstraintLayout>